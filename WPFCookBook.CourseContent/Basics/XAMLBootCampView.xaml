<UserControl x:Class="WPFCookBook.CourseContent.Basics.XAMLBootCampView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFCookBook.CourseContent.Basics"
             xmlns:customControls="clr-namespace:WPFCookBook.CustomControls.DocumentEditorControl;assembly=WPFCookBook.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">


    <Grid>
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition  Height="*" />
            </Grid.RowDefinitions>

            <!--This custom control shares the same context as the current UserControl!!!-->
            <customControls:DocumentEditorControl  Grid.Row="1"
                                                   x:Name="topicContentPage" />
        </Grid>
    </Grid>
</UserControl>
