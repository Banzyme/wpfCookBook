<UserControl x:Class="WPFCookBook.Views.basics.XamlFundamentals"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFCookBook.Views.basics"
             xmlns:shared="clr-namespace:WPFCookBook.Common"
             xmlns:fsc="clr-namespace:FsWpfControls.FsRichTextBox;assembly=FsRichTextBox"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <shared:XamlToFlowDocMapper x:Key="flowDocumentConverter" />
        <DataTemplate x:Key="TabsBasicHeaderTemplate">
            <Label FontWeight="Bold"
                   Content="{Binding Title}" />

        </DataTemplate>

        <DataTemplate x:Key="TabsBasicContentTemplate">
            <DataTemplate.Triggers>

            </DataTemplate.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="{Binding Content}" />
                </StackPanel>

                <WrapPanel Orientation="Horizontal"
                           Grid.Row="1">
                    <Button Margin="5"
                            Content="Save changes">



                    </Button>
                    <Button Margin="5"
                            Content="Discard" />
                </WrapPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="fundamentalsGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TabControl  Grid.Row="1"
                     x:Name="TopicsTabCtrl"
                     ItemsSource="{Binding TopicsList}"
                     ItemTemplate="{StaticResource TabsBasicHeaderTemplate}">

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          MaxHeight="800">
                                <fsc:FsRichTextBox x:Name="EditBox"
                                                   Document="{Binding Path=Content, Converter={StaticResource flowDocumentConverter}, Mode=TwoWay}"
                                                   Grid.Row="0"
                                                   Margin="10,10,10,5"
                                                   ToolbarBackground="#FFD2CB84"
                                                   ToolbarBorderBrush="#FFC6BE75"
                                                   ToolbarBorderThickness="1,1,1,0"
                                                   CodeControlsVisibility="Collapsed" />
                            </ScrollViewer>
                        </StackPanel>

                        <WrapPanel Orientation="Horizontal"
                                   Grid.Row="1">
                            <Button Margin="5"
                                    Command="{Binding DataContext.OnSaveChangesCommand, ElementName=fundamentalsGrid}"
                                    CommandParameter="{Binding ElementName=EditBox}"
                                    Content="Save changes">



                            </Button>
                            <Button Margin="5"
                                    Content="Discard" />
                            <Button Command="{Binding DataContext.SaveTopicCommand, ElementName=fundamentalsGrid}"
                                    HorizontalAlignment="Right"
                                    CommandParameter="{Binding ElementName=AddTopicForm}"
                                    Content="Add new page" />
                        </WrapPanel>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>

        </TabControl>

        <Grid x:Name="AddTopicForm"
              HorizontalAlignment="Center"
              Visibility="Collapsed"
              DataContext="{Binding ElementName=fundamentalsGrid, Path=DataContext.NewTopic}"
              Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal">
                <Label Content="Title: "></Label>
                <TextBox Text="{Binding Title, Mode=TwoWay}" Width="100" />
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Margin="10"
                        Orientation="Horizontal">
                <Label Content="Subtitle: "></Label>
                <TextBox Text="{Binding Subtitle, Mode=TwoWay}" Width="100" />
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Margin="0,25"
                        Orientation="Horizontal">
                <Button Content="Add topic"
                        Command="{Binding DataContext.AddTabItemCommand, ElementName=fundamentalsGrid}"
                        CommandParameter="{Binding}" />
            </StackPanel>
        </Grid>
    </Grid>


</UserControl>
