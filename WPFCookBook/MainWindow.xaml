<Window x:Class="WPFCookBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:entities="clr-namespace:WPFCookBook.Entities"
        xmlns:ViewModels="clr-namespace:WPFCookBook.ViewModels"
        xmlns:views="clr-namespace:WPFCookBook.Views"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        Title="WPF Handbook For Humans"
        Height="450"
        Width="800">

    <Window.DataContext>
        <ViewModels:BaseViewModel />
    </Window.DataContext>

    <Window.Resources>

        <DataTemplate DataType="{x:Type ViewModels:BasicsViewModel}">
            <views:BasicsSection />
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModels:ControlsSectionViewModel}">
            <views:ControlsSection />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid x:Name="PageContentGrid"
              Background="White">
            <DockPanel>
                <StackPanel Orientation="Vertical"
                            DockPanel.Dock="Top"
                            Background="White"
                            Height="100"
                            Margin="0, 30, 0, 2">
                    <TextBlock Background="White"
                               HorizontalAlignment="Center"
                               FontStretch="Expanded"
                               FontWeight="ExtraBlack"
                               FontSize="24"
                               Text="Header section....x" />

                    <Button Content="Basics"
                            Command="{Binding NavigationCommand}"
                            CommandParameter="basics" />

                    <Button Content="Controls"
                            Command="{Binding NavigationCommand}"
                            CommandParameter="controls" />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="1, 10,1,10">
                        <TextBox Text=""
                                 Padding="50, 10,50, 10"
                                 HorizontalAlignment="Center" />
                        <Button Padding="20, 10,20, 10"
                                Content="Search"
                                HorizontalAlignment="Center" />
                    </StackPanel>

                </StackPanel>


                <StackPanel Background="BlueViolet"
                            Width="280"
                            Height="Auto"
                            DockPanel.Dock="Left">


                    <TreeView x:Name="SideNavList" ItemsSource="{Binding ModulesList}"
                              SelectedValuePath="Name"
                              Padding="1, 15, 1, 15">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectedItemChanged">
                                <i:InvokeCommandAction Command="{Binding DataContext.NavigationCommand,
                                    RelativeSource={RelativeSource FindAncestor,
                                    AncestorType={x:Type Window}}}"
                                                       CommandParameter="{Binding ElementName=SideNavList, Path=SelectedValue}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>



                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type entities:WpfCourseModule}"
                                                      ItemsSource="{Binding ModuleSections}">
                                <StackPanel  Orientation="Horizontal">

                                    <Image
                                           Margin="0,0,5,0" />
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text=" ["
                                               Foreground="Blue" />
                                    <TextBlock Text="{Binding ModuleSections.Count}"
                                               Foreground="Blue" />
                                    <TextBlock Text="]"
                                               Foreground="Blue" />

                                </StackPanel>
                            </HierarchicalDataTemplate>
                            
                            <DataTemplate DataType="{x:Type entities:WpfCourseSection}"
                                                      >
                                <StackPanel Orientation="Horizontal">
                                    
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text=" ("
                                               Foreground="Green" />
                                    <TextBlock Text="TBA"
                                               Foreground="Green" />
                                    <TextBlock Text=" years)"
                                               Foreground="Green" />
                                </StackPanel>

                            </DataTemplate>
                            <!--<DataTemplate DataType="{x:Type entities:WpfCourseSectionItem}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source=""
                                           Margin="0,0,5,0" />
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text=" ("
                                               Foreground="Green" />
                                    <TextBlock Text="TBA"
                                               Foreground="Green" />
                                    <TextBlock Text=" years)"
                                               Foreground="Green" />

                                    <Button>
                                        <TextBlock Text="{Binding Content}" />
                                    </Button>

                                </StackPanel>

                            </DataTemplate>-->
                        </TreeView.Resources>
                    </TreeView>

                </StackPanel>

                <Grid DockPanel.Dock="Right">
                    <ContentControl  Content="{Binding CurrentViewModel}" />
                </Grid>

            </DockPanel>
        </Grid>
    </Grid>
</Window>
